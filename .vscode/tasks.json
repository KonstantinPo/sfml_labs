
{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "Debug",
			"command": "${config:compiler}",
			"args": [
				"${config:source_files}",
				"-o",
				"${config:build_debug_folder}\\${config:exe_name}", 
				"-DSFML_STATIC",
				"-g",
				"-Og",
				"-Wall",
				"-I${workspaceFolder}\\..\\SFML_\\include",
				"-L${workspaceFolder}\\..\\SFML_\\lib",
				 "-lsfml-main",
				"-lsfml-graphics-s-d",
				"-lsfml-window-s-d",
				"-lsfml-system-s-d",
				"-lopengl32",
				"-lglew32",
				"-lwinmm",
				"-lgdi32",
			],
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "компилятор: ${config:compiler}",
			"dependsOn": [
				"(debug) create build directory"
			],
			"options": {
				"cwd": "${fileDirname}"
			}
		},
